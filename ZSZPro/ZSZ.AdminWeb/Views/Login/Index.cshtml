
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    @*<link rel="icon" href="~/favicon.ico"  type="image/x-icon">*@
    @*<link rel="shortcut icon" href="http://localhost:14648/favicon.ico">*@
    <title>登陆</title>

    <!-- Bootstrap -->
    <link href="~/Content/plugins/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <!-- bootstrapValidator -->
    <link href="~/Content/plugins/bootstrapvalidator/css/bootstrapValidator.min.css" rel="stylesheet" />
    <link href="~/Content/css/login.css" rel="stylesheet" />

    <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
        .loginForm {
            margin-top: 200px;
        }
    </style>
</head>
<body>
    <div class="wrapper-page">
        <div class="card-box">
            <div class="panel-heading">
                <h3 class="text-center"> 测试后台登录 &nbsp;&nbsp; <strong class="text-custom">ForTest</strong> </h3>
            </div>


            <div class="panel-body">

                <form class="form-horizontal" id="loginForm" method="post" action="/Login/SubmitLogin">
                    <div class="form-group">                      
                        <div class="col-sm-12">
                            <input type="text" class="form-control" placeholder="请输入账户" name="UserAccount" value="@ViewData["UserName"]">
                        </div>
                    </div>
                    <div class="form-group">                       
                        <div class="col-sm-12">
                            <input type="password" class="form-control" placeholder="请输入密码" name="PassWord" id="pwdIpt">
                        </div>
                    </div>
                    <div class="form-group">                    
                        <div class="col-sm-6">
                            <input type="text" class="form-control" placeholder="请输入验证码" name="VerifyCode">
                        </div>
                        <div class="col-sm-6">
                            <img src="/Login/GetVerifyCode" alt="验证码" id="verifyCodeImg" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="IsRemind" value="true" checked> 记住我
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button class="btn btn-pink btn-block" type="submit">登陆</button>                          
                        </div>
                    </div>
                </form>
             
            </div>
        </div>
    </div>
 




    <!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
    <script src="~/Content/plugins/jquery-3.3.1/jquery-3.3.1.min.js"></script>
    <!-- 加载 Bootstrap 的所有 JavaScript 插件。你也可以根据需要只加载单个插件。 -->
    <script src="~/Content/plugins/bootstrap-3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Content/plugins/bootstrapvalidator/js/bootstrapValidator.min.js"></script>
    <!--layer-->>
    <script src="~/Content/plugins/layer-v3.1.1/layer/layer.js"></script>
    <script src="~/Content/js/Common.js"></script>
    <script src="~/Content/js/login/login.js"></script>

</body>
</html>
